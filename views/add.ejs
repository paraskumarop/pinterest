<%- include('./partials/header.ejs') %>

    <div class="post m-10">
        <h1 class="text-lg capitalize">Add Post here</h1>
        <hr class="bg-zinc-800 h-1 opacity-65">
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input class="block w-1/3 px-3 py-2 mt-2 rounded-lg "  type="file"  name="postimage" >
            <input class="block w-1/3 px-3 py-2 mt-2 rounded-lg" type="text" placeholder="Title" name="title" >
            <input class="block w-1/3 px-3 py-2 mt-2 rounded-lg " type="text" placeholder="Description" name="description">
            <input type="submit" class="bg-red-600 rounded-full px-7 py-2 mt-5 block w-1/3 text-white text-center hover:bg-red-700" value="Create Post">
        </form>
    </div>

<%- include('./partials/footer.ejs') %>